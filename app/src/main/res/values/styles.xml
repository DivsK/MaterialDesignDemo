<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNavy</item>
        <item name="colorPrimaryDark">@color/colorShadeGrey</item>
        <item name="colorAccent">@color/colorShadeBlue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorShadeGrey</item>
        <item name="android:textColorSecondary">@color/colorNavy</item>
    </style>

</resources>
